<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.grid {
			border-collapse: collapse;
			line-height: 0px;
		}
		
		.header {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 30px;
		}
		
		.label {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 20px;
		}
		
		.box {
			margin: 10px;
		}
		
		.msg {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 30px;
		}
		
	</ui:style>
	<g:DockLayoutPanel unit='PX'>
		<g:north size="40">
			<g:HorizontalPanel>
				<g:Label styleName="{style.header}">Go</g:Label>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:VerticalPanel ui:field="gamePanel">
				<g:FlowPanel styleName="{style.box}">
					<g:Label styleName="{style.label}">Current
						Player:
					</g:Label>
					<g:Image ui:field="whoseTurnImage"></g:Image>
				</g:FlowPanel>
				<g:Button ui:field="passBtn">Pass</g:Button>
				<g:FlowPanel styleName="{style.box}">
					<g:Label styleName="{style.label}">Game Status</g:Label>
					<g:HTML ui:field="statusHTML">Still on</g:HTML>
				</g:FlowPanel>
			</g:VerticalPanel>
		</g:center>
		<g:west size="590">
			<g:HTMLPanel>
				<g:Grid ui:field="goBoard" styleName="{style.grid}">
				</g:Grid>
				<g:Label ui:field="messageLabel" styleName="{style.msg}"></g:Label>
			</g:HTMLPanel>
		</g:west>

	</g:DockLayoutPanel>


</ui:UiBinder>
