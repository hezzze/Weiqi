<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='nyu.hezzze.weiqi.client.Graphics.MyStyle'>
		.boardContainer {
			padding: 10px 10px;
		}
		
		.brandContainer {
			border-spacing: 10px 0px;
		}
		
		.brandContainer td {
			vertical-align: middle;
		}
		
		.grid {
			border-collapse: collapse;
			line-height: 0px;
		}
		
		.banner {
			padding: 5px 10px;
			border-bottom: 1px solid #e5e5e5;
		}
		
		.title {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 30px;
			font-weight: bold;
		}
		
		.gameInfoLabel {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 20px;
			padding-left: 5px;
		}
		
		.hasMargin {
			margin: 10px;
		}
		
		.msg {
			font-family: Consolas, Comic Sans, Georgia, Serif;
			font-size: 20px;
		}
		
		.cellHover {
			box-sizing: border-box;
			-moz-box-sizing: border-box;
			-webkit-box-sizing: border-box;
			width: 30px;
			height: 30px;
			border: 1px solid yellow;
		}
		
		.whoseTurn {
			position: relative;
		}
		
		.whoseTurn:hover {
			cursor: move;
		}
		
		.whoseTurn span {
			display: none;
		}
		
		.whoseTurn:hover span {
			display: block;
			position: absolute;
			top: 1em;
			left: 1em;
			width: 8em;
			border: 1px solid #fff;
			background-color: #FFFF99;
			text-align: center;
			opacity: 0.9;
		}
		
		.gameLogArea {
			border: 2px solid #999966;
			-moz-box-shadow: inset 0px 1px 0px 0px #ffffff;
			-webkit-box-shadow: inset 0px 1px 0px 0px #ffffff;
			box-shadow: inset 0px 1px 0px 0px #ffffff;
			-webkit-border-top-left-radius: 5px;
			-moz-border-radius-topleft: 5px;
			border-top-left-radius: 5px;
			-webkit-border-top-right-radius: 5px;
			-moz-border-radius-topright: 5px;
			border-top-right-radius: 5px;
			-webkit-border-bottom-right-radius: 5px;
			-moz-border-radius-bottomright: 5px;
			border-bottom-right-radius: 5px;
			-webkit-border-bottom-left-radius: 5px;
			-moz-border-radius-bottomleft: 5px;
			border-bottom-left-radius: 5px;
		}
		
		.currentPlayerLabel {
			font-size: 20px;
			display: inline;
		}
		
		.dragTooltip {
			display: inline;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX'>
		<g:north size="55">
			<g:HTMLPanel styleName="{style.banner}">
				<table class="{style.brandContainer}">
					<tr>
						<td rowspan='2'>
							<g:Image ui:field="gameLogo"></g:Image>
						</td>
						<td rowspan='2'>
							<g:Label styleName="{style.title}" ui:field="title"></g:Label>
						</td>
						<td width="400" rowspan='2'>
						</td>
						<td rowspan='2'>
							<g:Label ui:field="greetingLabel" styleName="{style.msg}"></g:Label>
						</td>
						<td>
							<g:Label ui:field="userEmailLabel"></g:Label>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label ui:field="userRankLabel"></g:Label>
						</td>
					</tr>
				</table>

			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:HTMLPanel>
				<div style="margin: 10px">
					<g:Button ui:field="gameListBtn"></g:Button>
					<g:Button ui:field="startBtn"></g:Button>
					<g:Button ui:field="joinBtn"></g:Button>
				</div>
				<g:HTMLPanel styleName="{style.hasMargin}">
					<div>
						<span class="{style.whoseTurn}">
							<g:Image ui:field="whoseTurnImage"></g:Image>
							<span>
								<g:Label ui:field="dragTooltip" styleName="{style.dragTooltip}"></g:Label>
							</span>
						</span>
						<g:Label ui:field="currentPlayerLabel" styleName="{style.currentPlayerLabel}"></g:Label>
					</div>
					<div id="passBtn" style="margin-top:10px;">
						<g:Button ui:field="passOrRestartBtn"></g:Button>
					</div>
				</g:HTMLPanel>
				<g:FlowPanel styleName="{style.hasMargin}">
					<g:Label styleName="{style.gameInfoLabel}" ui:field="gameInfoLabel"></g:Label>
					<g:TextArea ui:field="gameLogArea" styleName="{style.gameLogArea}"></g:TextArea>
				</g:FlowPanel>
			</g:HTMLPanel>
		</g:center>
		<g:west size="590">
			<g:HTMLPanel styleName="{style.boardContainer}">
				<g:AbsolutePanel ui:field="boardPanel">
					<g:at left='0' top='0'>
						<g:Grid ui:field="goBoard" styleName="{style.grid}">
						</g:Grid>
					</g:at>
				</g:AbsolutePanel>
			</g:HTMLPanel>
		</g:west>

	</g:DockLayoutPanel>


</ui:UiBinder>
